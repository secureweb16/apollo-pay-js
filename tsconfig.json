{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2016",
    "strict": true,
    "baseUrl": "./src",
    // these are overridden by the Rollup plugin
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": ["src", "types"]
}
